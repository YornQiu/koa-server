{
  "name": "koa-server",
  "version": "1.0.0",
  "author": "Yorn Qiu",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node ./bin/www",
    "start": "pm2 start ecosystem.config.js --env dev",
    "test": "pm2 start ecosystem.config.js --env test",
    "build": "pm2 start ecosystem.config.js --env pro",
    "stop": "pm2 stop ecosystem.config.js",
    "logs": "pm2 logs",
    "lint": "eslint . --ext .js,.cjs,.mjs,.ts,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@koa/cors": "^3.1.0",
    "crypto-js": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.3",
    "koa-body": "4.2.0",
    "koa-compose": "^4.1.0",
    "koa-helmet": "^6.1.0",
    "koa-static": "^5.0.0",
    "koa-views": "^8.0.0",
    "log4js": "^6.4.0",
    "module-alias": "^2.2.2",
    "mongoose": "^6.0.10"
  },
  "devDependencies": {
    "@babel/core": "^7.17.9",
    "@babel/eslint-parser": "^7.17.0",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.0"
  },
  "imports": {
    "#root/*": "./*",
    "#libs/*": "./libs/*",
    "#utils/*": "./utils/*",
    "#models/*": "./models/*",
    "#services/*": "./services/*",
    "#controllers/*": "./controllers/*",
    "#middlewares/*": "./middlewares/*",
    "#utils": "./utils/index.js",
    "#models": "./models/index.js",
    "#services": "./services/index.js",
    "#controllers": "./controllers/index.js"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "parser": "@babel/eslint-parser",
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "globals": {
      "config": "readonly",
      "logger": "readonly"
    }
  },
  "prettier": {
    "singleQuote": true,
    "semi": false,
    "printWidth": 120
  }
}
